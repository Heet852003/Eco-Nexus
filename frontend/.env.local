# ============================================
# Eco-Nexus SCOS Frontend Environment Variables
# ============================================
# INSTRUCTIONS:
# 1. Copy this file: cp env.local.template .env.local
# 2. Fill in your actual values below
# 3. DO NOT commit .env.local to git!

# ============================================
# API CONFIGURATION
# ============================================
# Backend API URL
# Local development: http://localhost:3001
# Production: https://your-backend.onrender.com
NEXT_PUBLIC_API_URL=http://localhost:3001

# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_NAME=Eco-Nexus SCOS
NEXT_PUBLIC_APP_DESCRIPTION=Sustainable Choice Operating System

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_WALLET=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ============================================
# EXTERNAL SERVICES
# ============================================
NEXT_PUBLIC_SOLANA_EXPLORER=https://solscan.io/?cluster=devnet


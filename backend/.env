# ============================================
# Eco-Nexus SCOS Backend Environment Variables
# ============================================
# INSTRUCTIONS:
# 1. Copy this file: cp env.template .env
# 2. Fill in your actual values below
# 3. DO NOT commit .env to git!

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# OPENROUTER API (LLM - Required for AI Reasoning)
# ============================================
# Get your free API key at: https://openrouter.ai
# 1. Sign up for free account
# 2. Go to Keys section
# 3. Create new API key
# 4. Paste it here
OPENROUTER_API_KEY=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
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
LLM_MODEL=meta-llama/llama-3.2-3b-instruct:free

# ============================================
# SOLANA BLOCKCHAIN CONFIGURATION
# ============================================
# Devnet (free, for testing): https://api.devnet.solana.com
# Mainnet (production): https://api.mainnet-beta.solana.com
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
SOLANA_KEYPAIR_PATH=.solana/keypair.json
SOLANA_MINT_PATH=.solana/mint.json

# ============================================
# SNOWFLAKE ANALYTICS (Optional)
# ============================================
# Leave empty if you don't want to use Snowflake
# App will use mock data if Snowflake is not configured
# Get free trial at: https://snowflake.com
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USER=
SNOWFLAKE_PASSWORD=
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=ECO_NEXUS
SNOWFLAKE_SCHEMA=PUBLIC

# ============================================
# LOGGING & DEBUG
# ============================================
LOG_LEVEL=info
DEBUG=false

# ============================================
# SECURITY (For Production)
# ============================================
JWT_SECRET=
RATE_LIMIT_PER_MINUTE=100

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SOLANA=true
ENABLE_SNOWFLAKE=false
ENABLE_LLM=true

